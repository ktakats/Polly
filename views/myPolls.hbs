

<h2 class="title">Polls</h2>

<div id="polls" class="container-fluid call">
<!--{{#if polls}}
  {{#each polls}}

  <a href="polls/{{id}}" ><div class="btn btn-default poll-div">{{question}}</div></br></a>

  {{/each}}
{{/if}}-->
</div>
{{#if name}}
<a href="newPoll"><div class="btn btn-default newpoll-btn"><i class="fa fa-plus"></i> New poll</div></a>
{{else}}
<div><p>Log in or register to create a new poll</p></div>
{{/if}}

<script>
$(document).ready(function(){
  var address="/polls";
  var mainDiv=document.getElementById("polls");
  $.get(address, function(data){
    data.forEach(function(poll){
      var q=document.createElement("a");
      q.href="polls/"+poll.id;
      var qdiv=document.createElement("div");
      qdiv.setAttribute("class", "btn btn-default poll-div");
      qdiv.innerHTML=poll.question;
      q.appendChild(qdiv);
      q.appendChild(document.createElement("br"));
      mainDiv.appendChild(q);
    })
  })
})
</script>
